<h1>Posts</h1>

<% @posts.each do |post| %>
  <div>
    <p><strong><%= post.user.name %></strong>: <%= post.content %></p>
    <%= link_to 'View', post_path(post) %>
    <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<%= link_to 'New Post', new_post_path %>
